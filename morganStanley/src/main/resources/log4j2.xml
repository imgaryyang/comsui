<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <properties>
        <property name="project-name">MorganStanley</property>
        <property name="logfile-dir">../logs/MorganStanley/</property>
        <property name="console-pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%level:%thread] [%logger:%line] - %msg%n
        </property>
        <property name="logfile-pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%level:%thread] [%logger:%line] - %msg%n
        </property>
        <property name="file-log">FileResult</property>
    </properties>
    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${console-pattern}"/>
        </Console>
        <RollingFile name="${project-name}" fileName="${logfile-dir}${project-name}.log"
                     filePattern="${logfile-dir}${project-name}.%d{yyyy-MM-dd}-%i.log.gz"
                     bufferedIO="true" immediateFlush="false">
            <PatternLayout pattern="${logfile-pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="1 GB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="${project-name}-info" fileName="${logfile-dir}${project-name}-info.log"
                     filePattern="${logfile-dir}${project-name}-info.%d{yyyy-MM-dd}-%i.log.gz" bufferedIO="true"
                     immediateFlush="false">
            <PatternLayout pattern="${logfile-pattern}"/>
            <filters>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
            </filters>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="1 GB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="${project-name}-error" fileName="${logfile-dir}${project-name}-error.log"
                     filePattern="${logfile-dir}${project-name}-error.%d{yyyy-MM-dd}-%i.log.gz" bufferedIO="true"
                     immediateFlush="false">
            <PatternLayout pattern="${logfile-pattern}"/>
            <filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </filters>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="1 GB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="${file-log}" fileName="${logfile-dir}${file-log}.log"
                     filePattern="${logfile-dir}${file-log}-.%d{yyyy-MM-dd}-%i.log.gz" bufferedIO="true"
                     immediateFlush="true">
            <PatternLayout pattern="${logfile-pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="stdout"/>
        </Root>
        <Logger name="${file-log}" level="trace" additivity="true">
            <AppenderRef ref="${file-log}"/>
        </Logger>
    </Loggers>
</Configuration>